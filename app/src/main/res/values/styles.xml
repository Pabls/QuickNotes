<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/brown</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Message" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
